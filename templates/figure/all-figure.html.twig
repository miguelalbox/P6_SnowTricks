{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div id="all-figures">
        <div class="section-one" id="home">
            <div class="first-picture">
                <p class="title-home">Bienvenue sur le site de Snow Tricks</p>
                <img src="/images/home.jpg" alt="">
                <a href="#tricks" class="arow">
                    <i class="fa-solid fa-arrow-down"></i>
                </a>

            </div>
        </div>
        <div class="section-two" id="tricks">
            <div class="articles">
                {% if app.user %}
                <a href="{{ path('add_figure') }}" class="article"><img class="add" src="/images/plus.png" alt="" ></a>
                {% endif %}
                {% for figure in figures  %}

                        <div class="article">
                            <a href="{{ path('single_figure', {'id': figure.id}) }}">
                            <div class="image">
                                {% if figure.getMainMedia == null %}
                                    <img src="/images/default-miniature.webp" alt="">
                                {% else %}
                                    <img class="portrait-img" src="/images/media/figures-img/{{ figure.getMainMedia.url}}" alt="">
                                {% endif %}
                            </div>
                            {% if figure.user.id == user %}
                            <div class="title">
                                <p>{{ figure.title }}</p>
                            </div>
                            </a>
                                <div class="btn-action">
                                    <div>
                                        <a href="{{ path('edit_figure', {'slug': figure.slug} ) }}">Modifier</a>
                                    </div>
                                    <div>
                                        <a onclick="document.getElementById('delete-{{ figure.id }}').style.display='block'" data-target="#delete-{{ figure.id }}">Suprimer</a>
                                    </div>

                                </div>
                                {% else %}
                                    <div class="title" style="border-radius: 0px 0px 3px 3px;">
                                        <p style="padding: 39px 0px">{{ figure.title }}</p>
                                    </div>
                            {% endif %}
                        </div>
                    <div class="modal" id="delete-{{ figure.id }}">
                        <span onclick="document.getElementById('delete-{{ figure.id }}').style.display='none'" class="close" title="Close Modal">&times;</span>
                        <form class="modal-content" action="{{ path('delete_figure', {'id': figure.id}) }}" method="post">
                            <div class="container">
                                <h1>ÃŠtes vous sur de vouloir supprimer {{ figure.title }}</h1>
                                <div class="clearfix">

                                    <input type="hidden" name="actuality" value="{{ figure.id }}">

                                    <button onclick="document.getElementById('delete-{{ figure.id }}').style.display='none'" type="button" class="cancelbtn" data-dismiss="modal">Non</button>
                                    <button type="submit" class="deletebtn">Oui</button>
                                </div>
                            </div>
                        </form>
                    </div>
                {% endfor %}
            </div>
            <a href="#home" class="arow">
                <i class="fa-solid fa-arrow-up"></i>
            </a>
        </div>
        {{ knp_pagination_render(figures) }}
    </div>
{% endblock %}
{% block javascripts %}

<script>
    var scroll ={
        init: function(){
            $('a[href^="#"]').click(function(){
                var the_id = $(this).attr("href");
                if (the_id === '#') {
                    return;
                }
                $('html, body').animate({
                    scrollTop:$(the_id).offset().top
                }, 1200);
                return false;
            });
        }
    };

    $(scroll.init);

    // Get the modal
    {% for figure in figures %}
    var modal = document.getElementById('delete-{{ figure.id }}');
    {% endfor %}
    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
    </script>
{% endblock %}
